<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:gravity="right"
    android:orientation="vertical" 
     android:keepScreenOn="true">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color" >

        <LinearLayout
            android:id="@+id/linearLayoutHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/relativeLayoutHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/title_color" >
			<LinearLayout
                android:id="@+id/relativeLayoutHeader2"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="2.6"  
                android:gravity="center_vertical"              
                android:background="@drawable/header_bg" >
                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/back_button_xml"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="12dip"
                    android:visibility="gone" >
                </Button>

                <Button
                    android:id="@+id/buttonExit"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/exit_button_xml"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="12dip" >
                </Button>

                <LinearLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/buttonBack"
                    android:layout_weight="0.98" >

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:layout_weight="0.18"
                        android:ellipsize="end"
                        android:shadowColor="#000000"
                        android:shadowDx="1.2"
                        android:shadowDy="1.2"
                        android:shadowRadius="1.2"
                        android:text="Test June 123"
                        android:textColor="@color/white"
                        android:textSize="15dip"
                        android:textStyle="bold" />
                    
                </LinearLayout>
			</LinearLayout>
                <LinearLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:gravity="right" 
                    android:paddingRight="10dip">
                	<Button
                        android:id="@+id/buttonWater"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/water_button_today_xml"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip" />

                    <Button
                        android:id="@+id/buttonFitnes"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/fitnes_button_xml"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip" />

                    <Button
                        android:id="@+id/buttonAdd"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        
                        android:background="@drawable/add_button_today_xml"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout1"
                android:layout_below="@+id/relativeLayout1"
                android:background="@color/light_orange_color"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/imageLayout1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/template_spinner"
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/savetemplate"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dip"
                        android:background="@drawable/button_rounded"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="14dip" >
                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imageLayout2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/loadtemplate"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dip"
                        android:background="@drawable/button_rounded"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/load"
                        android:textColor="@color/white"
                        android:textSize="14dip" >
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutEmptyListHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textViewEmptyList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:maxLines="3"
                    android:text="@string/empty_list_label"
                    android:textColor="@color/dark_grey"
                    android:textSize="15dip"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTotalMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green"
        android:orientation="vertical" >
 <LinearLayout
            android:id="@+id/linearLayoutTotalFCP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/light_green" >

            <LinearLayout
                android:id="@+id/linearLayoutFCPline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:orientation="horizontal" >
 <LinearLayout
                    android:id="@+id/linearLayoutDishCall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewProteinLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="7dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/widjet_prot"
                        android:textColor="@color/white"
                        android:textSize="13dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewProteinTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13dip"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textViewProteinPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12dip"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayoutDishCall2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewFatLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="7dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/widjet_fat"
                        android:textColor="@color/white"
                        android:textSize="13dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewFatTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13dip"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textViewFatPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12dip"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutDishCall3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewCarbonLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="7dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/widjet_carb"
                        android:textColor="@color/white"
                        android:textSize="13dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewCarbonTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13dip"
                        android:textStyle="bold" />
                     <TextView
                        android:id="@+id/textViewCarbonPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="12dip"
                        android:textStyle="bold" />
                </LinearLayout>

               
            </LinearLayout>
        </LinearLayout>
         <LinearLayout
        android:id="@+id/linearLayoutTotal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green" >
               <LinearLayout
        android:id="@+id/linearLayoutTotal2"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@color/tab_selected_color" >
        <TextView
            android:id="@+id/textViewLimitLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            android:layout_marginLeft="5dip"
            android:maxLines="3"
            android:text="@string/limit"
            android:textColor="@color/text_color"
            android:textSize="12dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewLimitValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:maxLines="3"
            android:text="0"
            android:textColor="@color/text_color"
            android:textSize="13dip"
            android:textStyle="bold" />
        </LinearLayout>
 	<LinearLayout
        android:id="@+id/linearLayoutTotal1"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
       >
 
        <TextView
            android:id="@+id/textViewTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            android:maxLines="3"
            android:text="@string/total"
            android:textColor="@color/text_color"
            android:textSize="12dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            android:layout_marginLeft="5dip"
            android:maxLines="3"
            android:text="0"
            android:textColor="@color/text_color"
            android:textSize="13dip"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewDelta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="0dip"
            android:maxLines="3"
            android:text="/"
            android:textColor="@color/text_color"
            android:textSize="13dip"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewTotalLooseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            android:layout_marginLeft="5dip"
            android:maxLines="3"
            android:text="0"
            android:textColor="@color/text_color"
            android:textSize="13dip"
            android:textStyle="bold" />
        </LinearLayout>
 <LinearLayout
        android:id="@+id/linearLayoutTotal3"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@color/tab_selected_color" >
        <TextView
            android:id="@+id/textViewSurplusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            android:layout_marginLeft="5dip"
            android:maxLines="3"
            android:text="@string/surplus"
            android:textColor="@color/text_color"
            android:textSize="12dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSurplusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:maxLines="3"
            android:text="0"
            android:textColor="@color/text_color"
            android:textSize="13dip"
            android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

       
    </LinearLayout>

    <ListView
        android:id="@+id/listViewTodayDishes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutTotalMain"
        android:layout_below="@+id/relativeLayout1"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:divider="@color/grey_divider"
        android:dividerHeight="1dip"
        android:textColor="@color/text_color"
        android:longClickable="true" >
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_below="@+id/relativeLayout1"
        android:text=""
        android:textColor="@color/text_color" />

</RelativeLayout>