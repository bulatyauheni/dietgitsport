<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:gravity="right"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color" >

        <LinearLayout
            android:id="@+id/linearLayoutHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/relativeLayoutHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey" >

                <LinearLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/buttonBack"
                    android:layout_weight="0.5" >

                    <Button
                        android:id="@+id/buttonBack"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/back_button_xml"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip"
                        android:visibility="gone" >
                    </Button>

                    <Button
                        android:id="@+id/buttonExit"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/exit_button_xml"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip" >
                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/buttonBack"
                    android:layout_weight="2.1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="end"
                        android:shadowColor="#000000"
                        android:shadowDx="1.2"
                        android:shadowDy="1.2"
                        android:shadowRadius="1.2"
                        android:text="Test June 123 xsfdfsdfs sdfs fsdfsdfsdfs"
                        android:textColor="@color/white"
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right" >

                    <Button
                        android:id="@+id/buttonFitnes"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/fitnes_button_xml"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip" />

                    <Button
                        android:id="@+id/buttonAdd"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/add_button_today_xml"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout1"
                android:layout_below="@+id/relativeLayout1"
                android:background="@color/tab_selected_color"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/imageLayout1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/template_spinner"
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/savetemplate"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dip"
                        android:background="@drawable/button_rounded"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/changename"
                        android:textColor="@color/white"
                        android:textSize="14dip" >
                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutBtnLoadTempl"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/loadtemplate"
                        android:layout_width="fill_parent"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dip"
                        android:background="@drawable/button_rounded"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@string/load"
                        android:textColor="@color/white"
                        android:textSize="14dip" >
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutEmptyListHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textViewEmptyList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:maxLines="3"
                    android:text="@string/empty_list_label"
                    android:textColor="@color/dark_grey"
                    android:textSize="15dip"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTotal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_green"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayoutTotalWeight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/contact_color"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textViewTotalWeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:maxLines="3"
                android:text="@string/real_weight"
                android:textColor="@color/text_color"
                android:textSize="13dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTotalWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dip"
                android:layout_marginLeft="5dip"
                android:maxLines="3"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="15dip"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextrealWeight"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginTop="3dip"
                android:maxLength="5"
                android:maxLines="1"
                android:numeric="integer"
                android:text="0"
                android:textColor="@color/text_color" />

            <LinearLayout
                android:id="@+id/linearLayoutTotal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/contact_color"
                android:gravity="center_vertical|right" >

                <Button
                    android:id="@+id/buttonYes"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/ok_button_xml"
                    android:clickable="true"
                    android:maxLines="1"
                    android:textSize="12dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutTotal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/light_green" >

            <TextView
                android:id="@+id/textViewTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="5dip"
                android:maxLines="3"
                android:text="@string/total"
                android:textColor="@color/text_color"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCaloricityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="5dip"
                android:maxLines="3"
                android:text="@string/caloricity"
                android:textColor="@color/text_color"
                android:textSize="15dip"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dip"
                android:layout_marginLeft="5dip"
                android:maxLines="3"
                android:text="TextView"
                android:textColor="@color/text_color"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewLimitLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dip"
                android:layout_marginLeft="5dip"
                android:maxLines="3"
                android:text="@string/limit"
                android:textColor="@color/text_color"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewLimitValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:maxLines="3"
                android:text="TextView"
                android:textColor="@color/text_color"
                android:textSize="15dip"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutTotal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/light_green" >

            <LinearLayout
                android:id="@+id/linearLayoutFCPline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/dark_grey"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/linearLayoutDishCall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewProteinLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="7dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/protein"
                        android:textColor="@color/protein"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewProteinTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/protein"
                        android:textSize="15dip"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutDishCall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewFatLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="7dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/fat"
                        android:textColor="@color/fat"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewFatTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/fat"
                        android:textSize="15dip"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutDishCall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewCarbonLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="7dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/carbon"
                        android:textColor="@color/carbon"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewCarbonTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/carbon"
                        android:textSize="15dip"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewTodayDishes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutTotal"
        android:layout_below="@+id/relativeLayout1"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:divider="@color/grey_divider"
        android:dividerHeight="1dip"
        android:textColor="@color/text_color" >
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_below="@+id/relativeLayout1"
        android:text=""
        android:textColor="@color/text_color" />

</RelativeLayout>