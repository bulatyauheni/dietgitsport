<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notifLL"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:cacheColorHint="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/relativeLayoutB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip" >

        <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="15dip"
                android:textStyle="bold"
                android:visibility="gone" />
        
        <TextView
            android:id="@+id/textViewId2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="15dip"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewNotifEnabled"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="0"
            android:textSize="15dip"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewHH"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="15dip"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewMM"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="15dip"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/b_notif"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_margin="5dip"
            android:background="@drawable/notification_button_xml"
            android:gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="4"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layoutEmpty"
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="dsasdas"
                        android:textColor="@color/black"
                        android:textSize="12dip"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTime"
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewNotificationTimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="@string/set_notiftime_label"
                        android:textSize="12dip"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textViewNotificationTimeLabelOff"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="@string/set_notiftime_label_off"
                        android:textSize="12dip"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textViewNotificationTime"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="12-20"
                        android:textSize="12dip"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="15dip"
                android:textStyle="bold"
                android:visibility="gone" />


            <CheckBox
                android:id="@+id/enabledCB"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_margin="5dip"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>