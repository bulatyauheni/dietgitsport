<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_color"
    android:orientation="vertical" 
     android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/relativeLayoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color" >
<LinearLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_toLeftOf="@+id/buttonBack"
            android:background="@drawable/header_bg" >
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_margin="5dip"
            android:background="@drawable/back_button_xml"
            android:clickable="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="12dip"
            android:visibility="gone" >
        </Button>

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_margin="5dip"
            android:background="@drawable/exit_button_xml"
            android:clickable="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="12dip" >
        </Button>

        <LinearLayout
            android:id="@+id/relativeLayout41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/buttonBack"
            android:layout_weight="0.98" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_weight="0.18"
                android:ellipsize="end"
                android:shadowColor="#000000"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.2"
                android:text="Test June 123"
                android:textColor="@color/white"
                android:textSize="20dip"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:id="@+id/relativeLayout42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@+id/buttonAddLayout"
            android:layout_weight="1"
            android:gravity="right" >
			<ImageView
                android:id="@+id/imageConection"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:gravity="center_vertical"
                android:src="@drawable/noconection"
                android:visibility="gone" />
            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_margin="5dip"
                android:background="@drawable/add_button_xml"
                android:clickable="true"
                android:maxLines="1"
                android:textSize="12dip"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_color"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/imageLayout1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dishTab"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selected_tab"
                android:text="@string/dish_list" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imageLayout12"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/myDishTab"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/noselected_tab"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/complex_list" >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/imageLayout13"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sportTab"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/noselected_tab"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/fitnes_list" >
            </Button>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/search"
        android:visibility="visible" >

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="85dip"
            android:layout_marginTop="18dip"
            android:background="@drawable/edittext_rounded_corners"
            android:ellipsize="none"
            android:hint="@string/search_in_all"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="30dip"
            android:paddingRight="30dip" >
        </EditText>

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dip"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="invisible" >
        </Button>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:adjustViewBounds="true"
            android:src="@android:drawable/ic_menu_search" >
        </ImageView>
        <Button
            android:id="@+id/imageVoice"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dip"
            android:adjustViewBounds="true"
            android:background="@drawable/voice_icon"
            android:clickable="true" >
        </Button>
        <Button
            android:id="@+id/imageBarcode"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_toLeftOf="@+id/imageVoice"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dip"
            android:adjustViewBounds="true"
            android:background="@drawable/barcode_icon"
            android:clickable="true" >
        </Button>
    </RelativeLayout>
<LinearLayout
                android:id="@+id/linearLayoutEmptyListHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textViewEmptyList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:maxLines="3"
                    android:text="@string/empty_dish_search"
                    android:textColor="@color/dark_grey"
                    android:textSize="15dip"
                    android:textStyle="bold" />
            </LinearLayout>
    <LinearLayout
        android:id="@+id/spinerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/spimertype"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="3"
            android:gravity="right" >

            <Spinner
                android:id="@+id/dihs_type_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addTypeLayout"
            android:layout_width="55dip"
            android:layout_height="45dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@+id/spimertype"
            android:layout_weight="1"
            android:gravity="left"
            android:visibility="gone" >

            <Button
                android:id="@+id/buttonAddType"
                android:layout_width="45dip"
                android:layout_height="39dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/add_button_type_xml"
                android:clickable="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:paddingRight="20dip"
            android:text="@string/loading"
            android:textSize="17dip"
            android:visibility="gone" >
        </TextView>

        <TextView
            android:id="@+id/textViewBadSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:paddingRight="20dip"
            android:text="@string/bad_search"
            android:textSize="17dip"
            android:visibility="gone" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewDishes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@color/grey_divider"
        android:dividerHeight="1dip" >
    </ListView>

</LinearLayout>