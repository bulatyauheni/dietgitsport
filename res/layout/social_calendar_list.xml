<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color" >

        <LinearLayout
            android:id="@+id/linearLayoutHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
<LinearLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_toLeftOf="@+id/buttonBack"
            android:background="@drawable/header_bg" >
                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/back_button_xml"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="12dip"
                    android:visibility="visible" >
                </Button>

                <Button
                    android:id="@+id/buttonExit"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/exit_button_xml"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="12dip"
                    android:visibility="gone" >
                </Button>

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:layout_weight="0.18"
                    android:ellipsize="end"
                    android:shadowColor="#000000"
                    android:shadowDx="1.2"
                    android:shadowDy="1.2"
                    android:shadowRadius="1.2"
                    android:text="@string/user_history"
                    android:textColor="@color/white"
                    android:textSize="18dip"
                    android:textStyle="bold" >
                </TextView>
</LinearLayout>
                <LinearLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/buttonAddLayout"
                    android:layout_weight="1"
                    android:gravity="right" >
					<Button
                        android:id="@+id/buttonSettings"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/settings_button_xml"
                        android:clickable="true"
                        android:maxLines="1"
                        android:textSize="12dip"
                        android:visibility="gone" />
                    <Button
                        android:id="@+id/buttonMessages"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/message_button_xml"
                        android:clickable="true"
                        android:maxLines="1"
                        android:textSize="12dip"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
               <LinearLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/header_color"
                    android:visibility="visible" >

                    <LinearLayout
                        android:id="@+id/imageLayout1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/messagesTab"
                            android:layout_width="fill_parent"
                            android:layout_height="35dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/selected_tab"
                            android:text="@string/soc_tab_calendar" >
                        </Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/imageLayout1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/newsTab"
                            android:layout_width="fill_parent"
                            android:layout_height="35dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/noselected_tab"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/soc_tab_news" >
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@color/header_color"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/header_color"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/linearLayoutDishCall"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/linearLayoutDishCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textViewNameLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="@string/first_name"
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewNameValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="..."
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutDishCall"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textViewNameLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="@string/age"
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewAgeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="..."
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutDishCall"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textViewNameLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="@string/sport_level"
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageViewActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:src="@drawable/activity_level3" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutDishCall"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/linearLayoutDishCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textViewNameLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="@string/sex"
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewSexValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="..."
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutDishCall"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textViewNameLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="@string/weight"
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewWeightValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="..."
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutDishCall"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textViewNameLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="@string/high"
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewHeightValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:text="..."
                                android:textColor="@color/text_color"
                                android:textSize="11dip"
                                android:textStyle="bold" />
                        </LinearLayout>
                        
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/buttonFollow"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/follow_button_xml"
                        android:text=""
                        android:visibility="visible" />
                     <Button
                        android:id="@+id/buttonUnfollow"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_margin="5dip"
                        android:background="@drawable/unfollow_button_xml"
                        android:text=""
                        android:visibility="gone" />
                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutDishCall"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:text="@string/sex"
                        android:textColor="@color/text_color"
                        android:textSize="12dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:text="женский"
                        android:textColor="@color/text_color"
                        android:textSize="12dip"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutDishCall"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dip"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:text="@string/weight"
                        android:textColor="@color/text_color"
                        android:textSize="12dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_margin="10dip"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:text="55кг"
                        android:textColor="@color/text_color"
                        android:textSize="12dip"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emptyLayoutCalendar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:gravity="center_horizontal"
                    android:paddingRight="20dip"
                    android:text="@string/loading_social"
                    android:textSize="17dip"
                    android:visibility="gone" >
                </TextView>

                <TextView
                    android:id="@+id/textViewBadSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:gravity="center_horizontal"
                    android:paddingRight="20dip"
                    android:text="@string/users_calendar_empty"
                    android:textSize="17dip"
                    android:visibility="gone" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutChart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textViewTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:maxLines="3"
            android:text="@string/user_weight_history"
            android:textColor="@color/text_color"
            android:textSize="12dip"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutChart"
        android:layout_below="@+id/relativeLayout1"
        android:cacheColorHint="#00000000"
        android:divider="@color/grey_divider"
        android:dividerHeight="1dip" >
    </ListView>

</RelativeLayout>