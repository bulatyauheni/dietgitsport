<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:cacheColorHint="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dip"       
        android:layout_marginLeft="5dip"
        android:layout_marginTop="1dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewUserSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/green"
                    android:textSize="11dip"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewUserAge"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="bottom"
                    android:text="..."
                    android:textSize="10dip"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewUserWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dip"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewUserHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dip"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imageViewActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:src="@drawable/activity_level3"
                    android:visibility="gone" />
				<ImageView
                    android:id="@+id/comenticon"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:visibility="gone"
                    android:src="@drawable/commenticon" />
                <ImageView
                    android:id="@+id/imageViewDay"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:src="@drawable/halth_man" />

                <TextView
                    android:id="@+id/textViewName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="Булат Евгенийевич"
                    android:textColor="@color/light_broun"
                    android:textSize="12dip"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewUserName_replica2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dip"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textViewUserId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dip"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textViewNewsId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dip"
                        android:textStyle="bold"
                        android:visibility="gone" />
 					<TextView
                        android:id="@+id/ownerNewsId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dip"
                        android:textStyle="bold"
                        android:visibility="gone" />
                    
                    <Button
                        android:id="@+id/buttonRemove"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/dell_button_xml"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/buttonMessage"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/comment_button_xml"
                        android:clickable="true"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textSize="12dip" />
                </LinearLayout>
            </LinearLayout>

           

            <LinearLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewNewsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdasdasda sdfsdfsf sdfsdfsdf sdfsdfsdf sdfsdfsdf sdfsdfsdf sdfsdf"
                        android:textColor="@color/red"
                        android:textSize="11dip"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>