<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_color"
    android:orientation="vertical" 
     android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/relativeLayoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color" >
<LinearLayout
                android:id="@+id/relativeLayoutHeader"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="3"  
                android:gravity="center_vertical"              
                android:background="@drawable/header_bg" >
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_margin="5dip"
            android:background="@drawable/back_button_xml"
            android:clickable="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="12dip" >
        </Button>

        <LinearLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/buttonBack"
            android:layout_weight="0.98" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_weight="0.18"
                android:ellipsize="end"
                android:shadowColor="#000000"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.2"
                android:text="Test June 123"
                android:textColor="@color/white"
                android:textSize="20dip"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_color" >

        <Spinner
            android:id="@+id/fitnes_type_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dip" />
    </RelativeLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/main_color"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayoutInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
<LinearLayout
                    android:id="@+id/linearLayoutPartOfDay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/linearLayoutPartOfDay"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textViewPartOfDayLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/timeHHMMFitnes"
                            android:textColor="@color/text_color"
                            android:textSize="15dip" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/SpinnerHour"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_color" />
                     <Spinner
                        android:id="@+id/SpinnerMin"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_color" />
                    
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayoutDishWeight"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                    <LinearLayout
                        android:id="@+id/linearLayoutFitnes"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/linearLayoutFitnes"
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textViewDishWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:text="@string/fitnes_time"
                                android:textColor="@color/text_color"
                                android:textSize="19dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutFitnes"
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <bulat.diet.helper_plus.controls.NumberPickerFitnes
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutCaloricity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewDishCaloricityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewLoading"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dip"
                        android:text="@string/amoutnt_of_burn_calory"
                        android:textColor="@color/text_color"
                        android:textSize="17dip" />

                    <TextView
                        android:id="@+id/textCaloricityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewLoading"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="5dip"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="19dip" />

                    <TextView
                        android:id="@+id/textCaloricityValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewLoading"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dip"
                        android:text="@string/kcal"
                        android:textColor="@color/text_color"
                        android:textSize="19dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCaloricity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonNo"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/no_button_xml"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textSize="12dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonYes"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ok_button_xml"
                        android:clickable="true"
                        android:gravity="right"
                        android:maxLines="1"
                        android:textSize="12dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>